# Cloudflare Worker Environment Variables
# Note: These should be set in your Cloudflare Worker dashboard under Settings > Environment Variables
# This .env file is for local development with Wrangler CLI

# Password Authentication Configuration
ACCESS_PASSWORD=secret123

# Logging
LOGGING=true

# Origin Server URL (the website being protected)
ORIGIN_URL=https://test-cloudflare-website.adarsh.software

# Cloudflare Configuration
# Your Cloudflare account ID (found in Cloudflare dashboard - right sidebar)
# This should be a 32-character hex string, not your username
# CLOUDFLARE_ACCOUNT_ID=your_32_character_account_id_here

# Your Cloudflare API token (create at https://dash.cloudflare.com/profile/api-tokens)
# Needs "Cloudflare Workers:Edit" permissions
# CLOUDFLARE_API_TOKEN=your_api_token_here

# KV Namespace ID (already configured in wrangler.toml)
# This is automatically handled by Wrangler, but you can find it in your Cloudflare dashboard
KV_NAMESPACE_ID=f573def1f793421a800f1551bdc53378
BOT_PAYMENT_SYSTEM_URL=http://localhost:5000

# Steps to deploy:
# 1. Install Wrangler CLI: npm install -g wrangler
# 2. Login to Cloudflare: wrangler login
# 3. Deploy: wrangler deploy
# 4. Set environment variables in Cloudflare dashboard or use: wrangler secret put VARIABLE_NAME

WORKER_API_KEY=e309ce072cdf03ad0e75760a1f2ec33b74ed637031307b83cd910c0c87272f9c
# Public API base URL for worker to fetch config (set by set_api_url_and_deploy.sh)
API_BASE_URL=https://d2b57a8a3394.ngrok-free.app
